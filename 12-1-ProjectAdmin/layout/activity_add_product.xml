<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearRegister1"
    android:orientation="vertical"
    android:background="@color/black"

    tools:context=".Activity.AddProductActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool1"
        android:background="#8d2d5d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="ADD PRODUCT"/>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imgCategory"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:src="@drawable/addproduct"/>


    <!--<EditText
        android:id="@+id/edtCid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Category Id"
        android:textColor="#8d2d5d"
        android:textColorHint="#8d2d5d"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />-->
    <Spinner
        android:id="@+id/spin"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edtProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Product Name"
        android:textColor="#8d2d5d"
        android:textColorHint="#8d2d5d"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <EditText
        android:id="@+id/edtProductPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Product Price"
        android:textColor="#8d2d5d"
        android:textColorHint="#8d2d5d"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />

    <EditText
        android:id="@+id/edtProductDes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Product Description"
        android:textColor="#8d2d5d"
        android:textColorHint="#8d2d5d"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
      />





    <Button
        android:id="@+id/btnAddProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Product"
        android:backgroundTint="#8d2d5d"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"/>



</LinearLayout>